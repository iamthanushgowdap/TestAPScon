rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Helper Functions
    // =================================
    function isAdmin() {
      // Checks if the requesting user has the 'admin' role in their own user document.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      // Checks if the requesting user is the owner of the document.
      return request.auth != null && request.auth.uid == userId;
    }

    // =================================
    // User Collection Rules
    // =================================
    match /users/{userId} {
      // Any authenticated user can create their own user document during registration.
      allow create: if request.auth != null;

      // Users can read their own profile. Admins can read any individual profile.
      allow get: if isOwner(userId) || isAdmin();
      
      // Admins can list all users for the dashboard and management pages.
      allow list: if isAdmin();
                   
      // Users can update their own profile. Admins can update any profile.
      allow update: if isOwner(userId) || isAdmin();

      // Admins can delete users. Owners can also delete their own account.
      allow delete: if isAdmin() || isOwner(userId);
    }

    // =================================
    // Branch Collection Rules
    // =================================
    match /branches/{branchId} {
        // Any authenticated user can view the list of branches for registration/forms.
        allow get, list: if request.auth != null;

        // Only administrators can create, update, or delete branches.
        allow create, update, delete: if isAdmin();
    }
  }
}
