rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Rules for profile pictures
    match /profile-pictures/{userId}/{fileName} {
      // Anyone can read profile pictures
      allow read: if true;
      // Only the authenticated user can write to their own profile picture path
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for assignment attachments
    match /assignments/{assignmentId}/{allPaths=**} {
      // Any authenticated user can read assignment files
      allow read: if request.auth != null;
      
      // Only users with the role 'faculty' or 'admin' can write (upload, update, delete)
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['faculty', 'admin'];
    }
  }
}
