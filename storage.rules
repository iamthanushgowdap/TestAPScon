rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Profile Pictures
    match /profile-pictures/{userId}/{fileName} {
      // Anyone can read profile pictures
      allow read;
      // Only the authenticated user can write to their own profile picture path
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Assignments
    match /assignments/{assignmentId}/{fileName} {
      // Anyone can read assignment files
      allow read;
      // Only faculty or admin can write/upload assignments
      allow write: if request.auth != null && 
                    (get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'faculty' || 
                     get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}
